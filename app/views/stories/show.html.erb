<!DOCTYPE html>
<html>
  <head>
  <title>Couch-Concierge</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "jquery_style", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
  <%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.1.js', 'rails' %>
</head>
<body>

  <div data-role="page" data-theme="c">

    <div data-role="header">
      <h2><%= @story.name %></h2>
    </div><!-- /header -->

    <div data-role="content">
      <div class="ui-grid-a">
        <div class="ui-block-a">
          <h1><%= @story.name %></h1>
          <h4><%= @story.description %>.</h4>
        </div>
        <div class="ui-block-b">
          <img src=<%= @story.image_url %> align="right" width="100px" border="0" alt="TestStoryImage" /></a>
        </div>
      </div><!-- /grid-a -->

      <div data-role="content-primary">
        <ul data-role="listview" class="ui-listview">
          <li data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="div" data-icon="arrow-r" data-iconpos="right" data-theme="c" class="ui-btn ui-btn-icon-right ui-li-hasarrow ui-li ui-li-has-thumb ui-btn-up-c">
            <img src=<%= @restaurant.image_url %> class="ui-li-thumb">
            <div class="ui-btn-inner ui-li">
              <div class="ui-btn-text">
                <a href="<%= @restaurant.link %>" class="ui-link-inherit" target="_blank">
                  <h3 class="ui-li-heading"><%= @restaurant.name %></h3>
                  <p class="ui-li-desc"><%= @restaurant.description %></p>
                </a>
              </div>
              <span class="ui-icon ui-icon-arrow-r ui-icon-shadow"></span>
            </div>
          </li>
          <li data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="div" data-icon="arrow-r" data-iconpos="right" data-theme="c" class="ui-btn ui-btn-icon-right ui-li-hasarrow ui-li ui-li-has-thumb ui-btn-up-c">
            <img src=<%= @movie.image_url %> class="ui-li-thumb">
            <div class="ui-btn-inner ui-li">
              <div class="ui-btn-text">
                <a href="<%= @movie.link %>" class="ui-link-inherit" target="_blank">
                  <h3 class="ui-li-heading"><%= @movie.title %></h3>
                  <p class="ui-li-desc"><%= @movie.description %></p>
                </a>
              </div>
              <span class="ui-icon ui-icon-arrow-r ui-icon-shadow"></span>
            </div>
          </li>
        </ul>
        <div class="vote_form">
          <%= form_for(@vote, :remote => true) do |f| %>
            <%= f.hidden_field "story_id", :value => @story.id %>
            <%= image_submit_tag "buttons/vote-for-item.png" %>
          <% end %>
        </div>
      </div><!-- /content-primary -->
    </div><!-- /content -->
    <div data-role="footer" data-id="foo1" data-position="fixed">
      <div data-role="navbar">
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Concierge", stories_path %></li>
          <li><%= link_to "Create", new_story_path %></li>
        </ul>
      </div><!-- /navbar -->
    </div><!-- /footer -->
  </div><!-- /page -->

</body>
</html>